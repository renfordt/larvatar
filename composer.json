{
  "name": "renfordt/larvatar",
  "description": "A PHP package to provide you with many variants of avatars.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "avatar",
    "initials",
    "gravatar"
  ],
  "authors": [
    {
      "name": "Jannik Renfordt",
      "email": "jannik.renfordt@ikobb.de"
    }
  ],
  "support": {
    "issues": "https://github.com/renfordt/larvatar/issues"
  },
  "autoload": {
    "psr-4": {
      "Renfordt\\Larvatar\\": "src/",
      "Renfordt\\Larvatar\\Tests\\": "tests"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-gd": "*",
    "meyfa/php-svg": "^0.14.0 || ^0.16.0",
    "renfordt/clamp": "^v1.0.1",
    "renfordt/colors": "^v1.0.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.0",
    "laravel/pint": "^1.19",
    "symfony/var-dumper": "^7.2",
    "fakerphp/faker": "^1.24",
    "orchestra/testbench": "^9.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Renfordt\\Larvatar\\LarvatarServiceProvider"
      ]
    }
  },
  "scripts": {
    "refacto": "rector",
    "lint": "pint",
    "test:refacto": "rector --dry-run",
    "test:lint": "pint --test",
    "test:types": "phpstan analyse --ansi",
    "test:unit": "phpunit",
    "test": [
      "@test:refacto",
      "@test:lint",
      "@test:types",
      "@test:unit"
    ]
  }
}
